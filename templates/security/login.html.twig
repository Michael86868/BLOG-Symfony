{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <section class="container mt-5 login">
        <div class="row">
            <div class="col-xl-12">
                <h1 class="text-center">Přihlásit se</h1>
            </div>
            <div class="col-xl-6 mx-auto">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3 text-center mt-5">
                            <p class="text-danger h5 fw-bolder">Už jsi přihlášen jako {{ app.user.username }}</p>
                        </div>
                    {% endif %}
                    <div class="form-group">

                        <div class="inner-addon left-addon mt-5">
                            <i class="fa fa-envelope"></i>
                            <input type="text" name="email" value="{{ last_username }}" class="form-control" placeholder="Email" autofocus required/>
                        </div>
                        <div class="inner-addon left-addon mt-4">
                            <i class="fa fa-lock"></i>
                            <input name="password" type="password" class="form-control" placeholder="Password"/>
                        </div>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                    </div>
                    <div class="text-center mt-5">
                        <button style="padding: 10px 20px;" class="btn btn-dark font-weight-bold" type="submit">Přihlásit se</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
























{% endblock %}
